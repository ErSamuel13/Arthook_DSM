<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="ArthookGen.Infraestructure"
		                   namespace="ArthookGen.Infraestructure.EN.Arthook">
		    
		    
			
				<class name="PublicacionNH" table="Publicacion"> 
				  	
						<id name="Id" column="idPublicacion" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Pvp" type="float"> 
						<column name="pvp" />
					</property>
					<property name="Tipo" > 
						<column name="tipo"  not-null="true"/>
					</property>
					<property name="Descripcion" type="string"> 
						<column name="descripcion"  not-null="true"/>
					</property>
					<property name="Titulo" type="string"> 
						<column name="titulo"  not-null="true"/>
					</property>
					<property name="TipoPublicacion" > 
						<column name="tipoPublicacion"  not-null="true"/>
					</property>
			
			
			
			
			
			
			
			
		  			
						<many-to-one name="UsuarioPublicacion" class="ArthookGen.Infraestructure.EN.Arthook.UsuarioNH" >	
								<column name="FK_idUsuario_idUsuario"/> 
						</many-to-one>
											 					
			
		  			
						<bag name="ValoracionPublicacion" >
							<key>
							
								
								<column name="FK_idPublicacion_idPublicacionValoracion"/>
					      	</key>
							<one-to-many class="ArthookGen.Infraestructure.EN.Arthook.ValoracionPublicacionNH"/>
					    </bag>
					
			
		  			
					
							   <one-to-one name="LinPedPublicacion" class="ArthookGen.Infraestructure.EN.Arthook.LinPedNH" property-ref="PublicacionLinPed" />							
					 
						
					
					
					
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="PublicacionNHReadAllHQL">from PublicacionNH</query>
		  <query name="PublicacionNHFiltrarXUsuarioHQL"><![CDATA[Select pub FROM PublicacionNH as pub where pub.UsuarioPublicacion=:id]]></query>
		</hibernate-mapping>
	