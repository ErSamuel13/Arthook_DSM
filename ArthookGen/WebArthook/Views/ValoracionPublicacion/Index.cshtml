@model IEnumerable<WebArthook.Models.ValoracionPublicacionViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Valoraciones Publicacion</h1>

<p>
    <a asp-action="Create">Crear Nueva</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Puntuacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comentario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Puntuacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comentario)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.NumReferencia }) |
                @Html.ActionLink("Details", "Details", new { id = item.NumReferencia }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.NumReferencia })
            </td>
        </tr>
}
    </tbody>
</table>
