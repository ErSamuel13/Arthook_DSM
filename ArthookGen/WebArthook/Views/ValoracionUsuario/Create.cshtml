@model WebArthook.Models.ValoracionUsuarioViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    IEnumerable<SelectListItem> emisorItems = (IEnumerable<SelectListItem>)ViewData["emisorItems"];
    IEnumerable<SelectListItem> receptorItems = (IEnumerable<SelectListItem>)ViewData["receptorItems"];

}

<h1>Create</h1>

<h4>ValoracionUsuarioViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="puntuacion" class="control-label"></label>
                <input asp-for="puntuacion" class="form-control" />
                <span asp-validation-for="puntuacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="emisor" class="control-label"></label>
                <select class="form-select" asp-for="emisor" asp-items="emisorItems"> </select>
                <span asp-validation-for="emisor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="receptor" class="control-label"></label>
                <select class="form-select" asp-for="receptor" asp-items="receptorItems"> </select>
                <span asp-validation-for="receptor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
